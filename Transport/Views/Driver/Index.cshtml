@model IEnumerable<Transport.Data.Tables.Student>

@{
    ViewData["Title"] = "My Passengers";
}

<h1 class="text-white mb-3">@ViewData["Title"]</h1>


@if (TempData["Success"] != null)
{
    <div class="alert alert-success w-50">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger w-50">@TempData["Error"]</div>
}


<button class="btn btn-primary mb-3 mx-2" id="btnAddPassenger"><i class="fa-solid fa-user"></i> Add Passenger</button>



<div id="pform-container" style="display:none;">
    <form id="addpform" asp-action="AddPassenger" method="post">
        <label class="text-white">Add by phone number</label>
        <input name="phone" type="text" class="form-control mb-3 w-25" placeholder="Enter student phone..." />
        <button type="submit" class="btn btn-success mb-3">Add</button>
    </form>
</div>

<hr class="text-white my-4" />


@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var student in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card bg-dark text-white shadow-lg border-secondary">
                    <div class="card-body">
                        <h5 class="card-title text-success">@student.Name</h5>
                        <p class="card-text mb-1"><strong>Phone:</strong> @student.Phone</p>
                        <p class="card-text mb-1"><strong>Address:</strong> @student.Address</p>
                        <p class="card-text mb-5"><strong>University:</strong> @student.University</p>
                        <a href="https://wa.me/@student.Phone?text=@Uri.EscapeDataString("Your driver has arrived")"
                           target="_blank"
                           class="btn btn-warning btn-sm">
                            <i class="fa-solid fa-bell"></i> Alert On Arrive
                        </a>
                        <form asp-action="RemovePassenger" method="post" class="mt-2 remove-passenger-form">
                            <input type="hidden" name="studentId" value="@student.StudentId" />
                            <button type="submit" class="btn btn-danger btn-sm mb-3"><i class="fa-solid fa-trash"></i> Remove</button>
                            

                        </form>
                       
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-white">No passengers assigned yet.</p>
}

@section Scripts {
    <script>
        document.getElementById("btnAddPassenger").addEventListener("click", function () {
            const form = document.getElementById("pform-container");
            form.style.display = (form.style.display === "none" || form.style.display === "") ? "block" : "none";
        });


        const removeForms = document.querySelectorAll(".remove-passenger-form");
        removeForms.forEach(form => {
            form.addEventListener("submit", function (e) {
                const confirmed = confirm("Are you sure you want to remove this passenger?");
                if (!confirmed) e.preventDefault();
            });
        });
    </script>
}

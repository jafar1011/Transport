@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="dashboard-title text-white">@ViewData["Title"]</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success w-50">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger w-50">@TempData["Error"]</div>
}

<div class="admin-dashboard">


    <div class="admin-card">
        <h4>Recently Registered</h4><br />
        <button type="button" class="btn-primary">
            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Verification">Verify Users</a>
            
        </button>
    </div>


   
    <div class="admin-card">
        <h4>Disable Driver</h4>
        <form asp-action="DisableUser" asp-controller="Admin" method="post">
            <input type="email" name="email" placeholder="Driver Email" required class="form-control mb-2" />
            <button type="submit" class="btn btn-danger">Disable</button>
        </form>
    </div>

    
    <div class="admin-card">
        <h4>Add Admin</h4>
        <form asp-action="AddAdmin" asp-controller="Admin" method="post">
            <input type="email" name="email" placeholder="User Email" required />
            <button type="submit" class="btn-success">Add Admin</button>
        </form>
    </div>

</div>
<br />
<div class="admin-card">
    <h4>Manage User Data</h4>
    <form asp-action="ManageUser" asp-controller="Admin" method="get">
        <input type="email" name="email" placeholder="User Email" required class="form-control mb-2" />
        <button type="submit" class="btn btn-success">Manage</button>
    </form>
</div>


<style>
  /*css template*/
    .dashboard-title {
        color: #333;
        margin-bottom: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    
    .admin-dashboard {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
    }

    
    .admin-card {
        background-color: #1e1e2f;
        color: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        text-align: center;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.3);
        }

        .admin-card h4 {
            margin-bottom: 15px;
            font-size: 1.2rem;
        }

       
        .admin-card input {
            width: 100%;
            padding: 8px 10px;
            margin-bottom: 10px;
            border-radius: 6px;
            border: 1px solid #555;
            background-color: #2c2c3c;
            color: #fff;
            font-size: 0.95rem;
        }

       
        .admin-card button {
            padding: 8px 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.95rem;
            transition: background-color 0.2s;
        }

    
    .btn-danger {
        background-color: #e74c3c;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .btn-success {
        background-color: #2ecc71;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #27ae60;
        }

    .btn-primary {
        background-color: #3498db;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #2980b9;
        }
</style>
@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-white ">@ViewData["Title"]</h3>
<partial class="text-white" name="_StatusMessage" for="StatusMessage" />
<div class="row text-white">
    <div class="col-md-6">
        <form method="post">
    @if (Model.Role == "Driver")
    {
        <h3>Fill In Driver Info</h3>
        <div>
            <label>Name</label>
            <input asp-for="Driver.Name" class="form-control" />
        </div>
        <div>
            <label>Phone</label>
            <input asp-for="Driver.Phone" class="form-control" />
        </div>
        <div>
            <label>Address</label>
            <input asp-for="Driver.Areas" class="form-control" />
        </div>

        <h4>Car Info</h4>
        <div>
            <label>Model</label>
            <input asp-for="Car.Model" class="form-control" />
        </div>
        <div>
            <label>Plate</label>
            <input asp-for="Car.Plate" class="form-control" />
        </div>
        <div>
            <label>Passengers Total</label>
            <input asp-for="Car.PassengersTotal" class="form-control" />
        </div>
    }
    else if (Model.Role == "Student")
    {
        <h3>Fill In Student Info</h3>
        <div><label>Name</label><input asp-for="Student.Name" class="form-control" /></div>
        <div><label>Phone</label><input asp-for="Student.Phone" class="form-control" /></div>
        <div><label>Address</label><input asp-for="Student.Address" class="form-control" /></div>
        <div><label>University</label><input asp-for="Student.University" class="form-control" /></div>
        <div><label>College</label><input asp-for="Student.College" class="form-control" /></div>
        <div><label>Department</label><input asp-for="Student.Department" class="form-control" /></div>
        <div><label>Stage</label><input asp-for="Student.Stage" class="form-control" /></div>
    }
    else if (Model.Role == "Parent")
    {
        <h3>Fill In Parent Info</h3>
        <div><label>Name</label><input asp-for="Parent.Name" class="form-control" /></div>
        <div><label>Phone</label><input asp-for="Parent.Phone" class="form-control" /></div>
    
    }
    else
    {
        <p>No role-specific profile available.</p>
    }

    <br />
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
</<div>

</div>


